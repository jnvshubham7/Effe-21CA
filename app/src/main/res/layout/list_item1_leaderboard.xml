<!--        android:layout_marginEnd="8dp"-->
<!--        android:fontFamily="sans-serif"-->
<!--        android:text=" pts"-->
<!--        android:textColor="@color/baseTextPara"-->
<!--         app:layout_constraintEnd_toEndOf="parent"-->
