<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ui.dashboard.DashboardFragment" >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="8dp"
        android:background="@color/white"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="10dp"

        app:cardElevation="10dp"
        tools:ignore="MissingConstraints">



        <LinearLayout
            android:id="@+id/dasaboardRecycleview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:background="@color/gray0"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#3F96BD"

                    android:src="@drawable/ic_bell" />

                <TextView
                    android:id="@+id/event_title1"
                    android:layout_width="251dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"

                    android:text="Event Title"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#3F96BD" />



            </LinearLayout>

            <TextView
                android:id="@+id/event_description1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:autoLink="web"
                android:textColor="#3F96BD"
                android:shadowColor="#03A9F4"
                android:textColorHighlight="#03A9F4"
                android:textColorHint="#03A9F4"
                android:textColorLink="#03A9F4"

                android:text="Event description tells to about the event and describes about it as its event description"
                android:textAppearance="?android:textAppearanceSmall" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >



            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="end"

                android:ems="10"
                android:gravity="end"
                android:includeFontPadding="false"
                android:inputType="date"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="12/07/200"


                android:textAllCaps="false"
                android:textColor="#98566C"
                android:textSize="13sp" />


</LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>